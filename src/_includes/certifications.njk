<section id="certifications" aria-labelledby="section--certifications" class="l-secondary">
  <h2 id="section--certifications" class="u-hide-visually">{{ certifications.title }}</h2>
  
  <ul class="grid--list">
    {% for item in certifications.list %}
    <li>
      <h3>{{ item.title }}</h3>
      <p>{{ item.description | safe }}</p>
    </li>
    {% endfor %}
  </ul>
</section>
